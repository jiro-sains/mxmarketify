<h1>Nuevo Cliente</h1>

<%= simple_form_for @client do |f| %>
  <%= f.input :first_name, label: 'Nombre' %>
  <%= f.input :last_name, label: 'Apellido' %>
  <%= f.input :company, label: 'Compañía' %>
  <%= f.input :title, label: 'Título' %>
  <%= f.input :telephone, label: 'Teléfono' %>
  <%= f.input :email, label: 'Correo electrónico' %>
  <%= f.input :decision_maker, label: 'Toma Decisiones?' %>
  <%= f.submit "Listo" %>
<% end %>